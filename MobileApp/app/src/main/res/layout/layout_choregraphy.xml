<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        tools:context=".activities.ui.memory.MemoryActivityMain">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="353dp"
            android:layout_height="114dp" tools:layout_editor_absoluteY="310dp" tools:layout_editor_absoluteX="26dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_1" android:id="@+id/shaking1"
                android:layout_weight="1" android:visibility="invisible"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_1"
                android:layout_weight="1" android:visibility="invisible" android:id="@+id/shaking2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_1" android:id="@+id/shaking3"
                android:layout_weight="1" android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="352dp"
            android:layout_height="114dp" tools:layout_editor_absoluteY="312dp"
            tools:layout_editor_absoluteX="27dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_2" android:id="@+id/twist1"
                android:layout_weight="1" android:visibility="invisible"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_2" android:id="@+id/twist2"
                android:layout_weight="1" android:visibility="invisible"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_2" android:id="@+id/twist3"
                android:layout_weight="1" android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="353dp"
            android:layout_height="114dp" tools:layout_editor_absoluteY="312dp"
            tools:layout_editor_absoluteX="27dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_3"
                android:id="@+id/dab1" android:visibility="invisible"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_3" android:id="@+id/dab2"
                android:visibility="invisible"/>
        <ImageView
                android:layout_width="134dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/button_3" android:id="@+id/dab3"
                android:layout_weight="1" android:visibility="invisible"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="392dp"
            android:layout_height="235dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_main"
            app:layout_constraintVertical_bias="1.0">

        <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexDirection="row_reverse"
                app:justifyContent="center"
                app:alignItems="center"
                app:flexWrap="wrap">

            <ImageButton
                    android:id="@+id/dab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_3"
                    android:text="parasect"/>
            <ImageButton
                    android:id="@+id/twist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_2"
                    android:text="Android"/>
            <ImageButton
                    android:id="@+id/shaking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@drawable/button_1"
                    android:text="Android"/>


        </com.google.android.flexbox.FlexboxLayout>


        <Button
                android:text="Lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/Lecture"/>
        <Button
                android:text="suppr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/suppr"/>

    </LinearLayout>
    <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>


</androidx.constraintlayout.widget.ConstraintLayout>