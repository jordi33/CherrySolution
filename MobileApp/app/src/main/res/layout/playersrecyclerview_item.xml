<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/childName"
            android:layout_width="82dp"
            android:layout_height="22dp"
            android:layout_gravity="top|start"
            android:layout_weight="1"
            tools:text="Child name"
            tools:layout_editor_absoluteX="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/childSurname"
            android:gravity="center_horizontal"/>

    <TextView
            android:id="@+id/childSurname"
            android:layout_width="92dp"
            android:layout_height="19dp"
            android:layout_gravity="center|start"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Child surname"
            tools:layout_editor_absoluteY="83dp"
            tools:layout_editor_absoluteX="16dp"
            android:gravity="center_horizontal"/>

    <TextView
            android:id="@+id/childActivities"
            android:layout_width="261dp"
            android:layout_height="47dp"
            android:layout_gravity="top|start"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Child Activities"
            tools:layout_editor_absoluteY="97dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/childSurname"
            android:layout_marginStart="8dp"
            tools:gravity="center_vertical"/>

    <TextView
            android:id="@+id/childAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="5"
            tools:text="Child age"
            tools:layout_editor_absoluteX="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/childSurname"
            android:gravity="center_horizontal"/>

    <TextView
            android:id="@+id/childCenterOfInterest"
            android:layout_width="261dp"
            android:layout_height="48dp"
            android:layout_gravity="top|start"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Child interest"
            tools:layout_editor_absoluteY="43dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/childSurname"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.555"
            android:gravity="center_vertical"/>



</androidx.constraintlayout.LinearLayout>